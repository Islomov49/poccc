<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvCatEditName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/twentyfour_dp"
            android:layout_marginRight="@dimen/ten_dp"
            android:layout_weight="1"
            android:text="@string/sub_cat"
            android:textColor="@color/toolbar_text_color"
            android:textSize="@dimen/sixteen_dp" />

        <ImageView
            android:id="@+id/ivSubCatClose"
            android:layout_width="@dimen/twentyfive_dp"
            android:layout_height="@dimen/twentyfive_dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/ten_dp"
            android:src="@drawable/cancel_sign" />

        <ImageView
            android:id="@+id/ivSubCatSave"
            android:layout_width="@dimen/twentyfive_dp"
            android:layout_height="@dimen/twentyfive_dp"
            android:layout_marginBottom="@dimen/eight_dp"
            android:layout_marginRight="@dimen/twentyfour_dp"
            android:layout_marginTop="@dimen/eight_dp"
            android:src="@drawable/check_sign" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivCatIcon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:background="@color/currency_list_border" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/etSubCategoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/twentyfour_dp"
            android:layout_marginLeft="@dimen/twentyfour_dp"
            android:layout_marginRight="@dimen/twentyfour_dp"
            android:layout_marginTop="@dimen/twenty_dp"
            android:ems="10"
            android:hint="@string/subcat_name"
            android:maxLength="22"
            android:textColor="@color/toolbar_text_color"
            android:textSize="@dimen/sixteen_sp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical">
            <requestFocus />
        </EditText>
        <com.jim.pocketaccounter.helper.FABIcon
            android:id="@+id/fabChooseIcon"
            android:layout_width="@dimen/fiftysix_dp"
            android:layout_height="@dimen/fiftysix_dp"
            android:layout_marginRight="@dimen/sixteen_dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/fifteen_dp"
            android:layout_marginTop="@dimen/fifteen_dp"/>
    </LinearLayout>
</LinearLayout>
