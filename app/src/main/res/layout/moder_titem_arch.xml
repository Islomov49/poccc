<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        android:layout_marginLeft="@dimen/eight_dp"
        android:layout_marginRight="@dimen/eight_dp"
        android:layout_marginBottom="@dimen/sevent_dp"
        android:layout_marginTop="@dimen/two_dp"
        card:cardMaxElevation="@dimen/ten_dp"
        card:cardElevation="@dimen/five_dp"
        card:cardCornerRadius="@dimen/eight_dp"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iconaaa"
                    android:layout_width="@dimen/seventy_dp"
                    android:layout_height="@dimen/seventy_dp"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:layout_marginLeft="@dimen/sixteen_dp"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:padding="@dimen/five_dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/NameCr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sixteen_sp"
                            android:layout_marginTop="@dimen/five_dp"
                            android:textColor="@color/black_for_glavniy_text"
                            android:layout_toLeftOf="@+id/procent_of_credit"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />
                        <TextView
                            android:id="@+id/procent_of_credit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/eightteen_dp"
                            android:textColor="@color/black_for_glavniy_text"
                            android:layout_marginTop="@dimen/five_dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/three_dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/twelve_sp"
                            android:gravity="bottom"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/green_light"
                            android:id="@+id/total_value"
                            android:layout_alignBottom="@+id/textView5"
                            android:layout_alignParentTop="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_credit_value"
                            android:textSize="@dimen/twelve_sp"
                            android:textColor="@color/for_darker"
                            android:id="@+id/textView5"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_toLeftOf="@+id/total_value"
                            android:layout_toStartOf="@+id/total_value" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/three_dp"
                        android:layout_marginBottom="@dimen/eight_dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_paid"
                            android:textSize="@dimen/twelve_sp"
                            android:textColor="@color/for_darker"
                            android:id="@+id/textView6"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_toLeftOf="@+id/totalpayd"
                            android:layout_toStartOf="@+id/totalpayd" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/twelve_sp"
                            android:gravity="bottom"
                            android:textColor="@color/green_light"
                            android:id="@+id/totalpayd"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />

                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/green_light_forline"


                android:layout_marginTop="@dimen/four_dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/sixteen_dp"
                android:paddingRight="@dimen/sixteen_dp"
                android:paddingBottom="@dimen/ten_dp"
                android:paddingTop="@dimen/six_dp"
                android:background="@color/grey_light2">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:id="@+id/relativeLayout">
                    <RelativeLayout
                        android:id="@+id/rela2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/two_dp"
                        android:layout_below="@+id/realrt1"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/taken_date"
                            android:textSize="@dimen/twelve_sp"
                            android:textColor="@color/for_darker"
                            android:id="@+id/dateay"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/twelve_sp"
                            android:gravity="bottom"
                            android:textColor="@color/black_for_glavniy_text"
                            android:id="@+id/date_start"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/realrt1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/three_dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/twelve_sp"
                            android:gravity="bottom"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/black_for_glavniy_text"
                            android:id="@+id/left_date"
                            android:layout_alignBottom="@+id/textView2"
                            android:layout_alignParentTop="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/left"
                            android:textSize="@dimen/twelve_sp"
                            android:textColor="@color/for_darker"
                            android:id="@+id/textView2"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_toLeftOf="@+id/left_date"
                            android:layout_toStartOf="@+id/left_date" />

                    </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@+id/rela2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/three_dp"
                    android:layout_marginBottom="@dimen/five_dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/twelve_sp"
                        android:gravity="bottom"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/black_for_glavniy_text"
                        android:id="@+id/overallpay"
                        android:layout_alignBottom="@+id/textView3"
                        android:layout_alignParentTop="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/adding_to_archive"
                        android:textSize="@dimen/twelve_sp"
                        android:textColor="@color/for_darker"
                        android:id="@+id/textView3"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_toLeftOf="@+id/overallpay"
                        android:layout_toStartOf="@+id/overallpay" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
