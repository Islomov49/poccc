<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings_widget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jim.pocketaccounter.widget.SettingsWidget"
    android:padding="@dimen/sixteen_dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/setsetste"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/widget_settings"
                android:textSize="@dimen/twentysix_sp"
                android:textColor="@color/black_for_glavniy_text"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_below="@id/setsetste"
                android:layout_marginTop="@dimen/twenty_dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/eighteen_sp"
                        android:textColor="@color/black_for_glavniy_text"
                        android:text="@string/main_diagramm"
                        android:textStyle="bold"
                        android:layout_marginRight="@dimen/ten_dp"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:background="#dfdfdf"/>
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_for_glavniy_text"
                        android:text="@string/period_of_diagramm"
                        android:textSize="@dimen/eighteen_sp"/>
                    <Spinner
                        android:id="@+id/perid_diagram"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="@dimen/two_dp"></Spinner>
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/sixteen_dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"

                        android:textSize="@dimen/eighteen_sp"
                        android:textColor="@color/black_for_glavniy_text"
                        android:text="@string/category"
                        android:layout_marginRight="@dimen/ten_dp"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:background="#dfdfdf"/>
                    </RelativeLayout>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/twelve_dp"

                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/linearLayout4"
                        android:weightSum="1"
                        android:layout_toLeftOf="@+id/linearLayout5"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">

                        <ImageView
                            android:id="@+id/first_but_icon"
                            android:layout_width="@dimen/seventy_dp"
                            android:layout_height="@dimen/seventy_dp"
                            android:src="@drawable/icons_3"
                            android:scaleType="centerInside"
                            android:background="@drawable/shape_for_widget_black"/>

                        <TextView
                            android:id="@+id/category_name_1"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/seventy_dp"
                            android:text=""
                            android:textSize="@dimen/eighteen_sp"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/ten_dp"
                            android:textColor="@color/black_for_glavniy_text" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignBottom="@+id/linearLayout4"
                        android:id="@+id/linearLayout5"
                        android:layout_alignParentTop="true">
                        <ImageView

                            android:layout_width="@dimen/thirty_dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/five_dp"
                            android:src="@drawable/ic_delete_black_24dp"
                            android:scaleType="centerInside"
                            android:id="@+id/delete_but1" />
                        <ImageView
                            android:id="@+id/change_ed_but1"
                            android:layout_width="@dimen/thirty_dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_settings_black_24dp"
                            android:layout_marginRight="@dimen/five_dp"
                            android:scaleType="centerInside"
                            />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"

                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/linearLayout44"
                        android:weightSum="1"
                        android:layout_toLeftOf="@+id/linearLayout55"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">

                        <ImageView
                            android:id="@+id/second_but_icon"
                            android:layout_width="@dimen/seventy_dp"
                            android:layout_height="@dimen/seventy_dp"
                            android:src="@drawable/icons_3"
                            android:scaleType="centerInside"
                            android:background="@drawable/shape_for_widget_black"/>

                        <TextView
                            android:id="@+id/category_name_2"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/seventy_dp"
                            android:text="Category1"
                            android:textSize="@dimen/eighteen_sp"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/ten_dp"
                            android:textColor="@color/black_for_glavniy_text" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignBottom="@+id/linearLayout44"
                        android:id="@+id/linearLayout55"
                        android:layout_alignParentTop="true">
                        <ImageView

                            android:layout_width="@dimen/thirty_dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/five_dp"
                            android:src="@drawable/ic_delete_black_24dp"
                            android:scaleType="centerInside"
                            android:id="@+id/delete_but2" />
                        <ImageView
                            android:id="@+id/change_ed_but2"
                            android:layout_width="@dimen/thirty_dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_settings_black_24dp"
                            android:layout_marginRight="@dimen/five_dp"
                            android:scaleType="centerInside"
                            />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"

                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/linearLayout444"
                        android:weightSum="1"
                        android:layout_toLeftOf="@+id/linearLayout555"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">

                        <ImageView
                            android:id="@+id/thirt_but_icon"
                            android:layout_width="@dimen/seventy_dp"
                            android:layout_height="@dimen/seventy_dp"
                            android:src="@drawable/icons_3"
                            android:scaleType="centerInside"
                            android:background="@drawable/shape_for_widget_black"/>

                        <TextView
                            android:id="@+id/category_name_3"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/seventy_dp"
                            android:text="Category1"
                            android:textSize="@dimen/eighteen_sp"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/ten_dp"
                            android:textColor="@color/black_for_glavniy_text" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignBottom="@+id/linearLayout444"
                        android:id="@+id/linearLayout555"
                        android:layout_alignParentTop="true">
                        <ImageView

                            android:layout_width="@dimen/thirty_dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/five_dp"
                            android:src="@drawable/ic_delete_black_24dp"
                            android:scaleType="centerInside"
                            android:id="@+id/delete_but3" />
                        <ImageView
                            android:id="@+id/change_ed_but3"
                            android:layout_width="@dimen/thirty_dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_settings_black_24dp"
                            android:layout_marginRight="@dimen/five_dp"
                            android:scaleType="centerInside"
                            />

                    </LinearLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"

                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/linearLayout4444"
                        android:weightSum="1"
                        android:layout_toLeftOf="@+id/linearLayout5555"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">

                        <ImageView
                            android:id="@+id/four_but_icon"
                            android:layout_width="@dimen/seventy_dp"
                            android:layout_height="@dimen/seventy_dp"
                            android:src="@drawable/icons_3"
                            android:scaleType="centerInside"
                            android:background="@drawable/shape_for_widget_black"/>

                        <TextView
                            android:id="@+id/category_name_4"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/seventy_dp"
                            android:text="Category1"
                            android:textSize="@dimen/eighteen_sp"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/ten_dp"
                            android:textColor="@color/black_for_glavniy_text" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignBottom="@+id/linearLayout4444"
                        android:id="@+id/linearLayout5555"
                        android:layout_alignParentTop="true">
                        <ImageView

                            android:layout_width="@dimen/thirty_dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/five_dp"
                            android:src="@drawable/ic_delete_black_24dp"
                            android:scaleType="centerInside"
                            android:id="@+id/delete_but4" />
                        <ImageView
                            android:id="@+id/change_ed_but4"
                            android:layout_width="@dimen/thirty_dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_settings_black_24dp"
                            android:layout_marginRight="@dimen/five_dp"
                            android:scaleType="centerInside"
                            />


                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>

        </RelativeLayout>

    </ScrollView>


</FrameLayout>
