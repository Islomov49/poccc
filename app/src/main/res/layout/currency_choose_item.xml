<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/hundred_and_ten_dp"
    android:layout_height="@dimen/hundred_and_ten_dp"
    android:background="@color/white"
    android:layout_centerInParent="true">

    <com.jim.pocketaccounter.helper.CurrencyChecbox
        android:id="@+id/chbCurrencyChoose"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/five_dp"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/tvCurrencyChooseSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="@dimen/sixteen_sp"/>

</RelativeLayout>
