<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tvCurrencyExchangeListItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ten_dp"
            android:layout_marginLeft="@dimen/sixteen_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_weight="1"
            android:text="@string/enter_exchange"
            android:textColor="@color/toolbar_text_color"
            android:textSize="@dimen/sixteen_sp" />

        <ImageView
            android:id="@+id/ivCurrencyEditDialogCancel"
            android:layout_width="@dimen/twentyfive_dp"
            android:layout_height="@dimen/twentyfive_dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/ten_dp"
            android:src="@drawable/cancel_sign" />

        <ImageView
            android:id="@+id/ivCurrencyEditDialogOk"
            android:layout_width="@dimen/twentyfive_dp"
            android:layout_height="@dimen/twentyfive_dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/ten_dp"
            android:layout_marginRight="@dimen/sixteen_dp"
            android:src="@drawable/check_sign" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:background="@color/lv_border" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fourteen_dp"
            android:textColor="@color/black_for_glavniy_text"
            android:layout_marginLeft="15dp"
            android:text="@string/data_izmenenia"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:id="@+id/textView22"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/sixteen_dp"
            android:layout_alignBottom="@+id/tvExchangeEditDate"
            android:layout_alignTop="@+id/tvExchangeEditDate"
            android:layout_toLeftOf="@+id/tvExchangeEditDate"
            android:layout_toStartOf="@+id/tvExchangeEditDate" />
        <EditText
            android:id="@+id/tvExchangeEditDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/ten_dp"
            android:focusableInTouchMode="false"
            android:textColor="@color/toolbar_text_color"
            android:textSize="@dimen/sixteen_dp"
            android:layout_marginRight="@dimen/sixteen_dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_marginBottom="@dimen/sixteen_dp"

        android:orientation="horizontal">
        <TextView
            android:id="@+id/glava"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/sixteen_dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/sixteen_dp"
            android:textColor="@color/black_for_glavniy_text"
            android:text="1$ = "/>
        <EditText
            android:id="@+id/etExchange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sevent_dp"
            android:layout_marginRight="@dimen/sixteen_dp"
            android:background="@drawable/edittext_with_toolbarcolor"
            android:ems="10"
            android:padding="@dimen/five_dp"
            android:textSize="@dimen/sixteen_sp"
            android:inputType="numberDecimal">

            <requestFocus />
        </EditText>
    </LinearLayout>

</LinearLayout>
